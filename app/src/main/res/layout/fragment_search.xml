<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".bottom_navigation.HomeFragment">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvSearchFrag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_orders"
        android:textSize="@dimen/t24"
        app:layout_constraintBottom_toTopOf="@+id/etSearchFrag"
        app:layout_constraintEnd_toEndOf="@+id/etSearchFrag"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/etSearchFrag"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/etSearchFrag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:inputType="text"
        android:textSize="@dimen/t24"
        app:layout_constraintBottom_toTopOf="@+id/btnSearchFrag"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvSearchFrag" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnSearchFrag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/submit"
        android:textSize="@dimen/t24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/etSearchFrag"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/etSearchFrag"
        app:layout_constraintTop_toBottomOf="@+id/etSearchFrag" />

</androidx.constraintlayout.widget.ConstraintLayout>